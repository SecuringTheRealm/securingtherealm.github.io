---
// Tower castle section for talks page
export interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 200 250"
  class={className}
  role="img"
  aria-label="Tower illustration"
  style="width: 100%; max-width: 200px; height: auto; image-rendering: pixelated; image-rendering: crisp-edges;"
>
  <title>The Tower</title>

  <!-- Tower body -->
  <rect x="10" y="0" width="180" height="250" fill="var(--colour-teal-bg)" stroke="var(--colour-stone)" stroke-width="4" />

  <!-- Brick pattern -->
  <rect x="20" y="10" width="24" height="16" fill="var(--colour-stone)" opacity="0.15" />
  <rect x="60" y="10" width="24" height="16" fill="var(--colour-stone)" opacity="0.15" />
  <rect x="120" y="10" width="24" height="16" fill="var(--colour-stone)" opacity="0.15" />
  <rect x="160" y="10" width="24" height="16" fill="var(--colour-stone)" opacity="0.15" />

  <!-- Battlements (pixel-perfect crenellations) -->
  <rect x="10" y="-8" width="32" height="8" fill="var(--colour-stone)" />
  <rect x="10" y="0" width="32" height="24" fill="var(--colour-teal-dark)" />
  <rect x="74" y="-8" width="32" height="8" fill="var(--colour-stone)" />
  <rect x="74" y="0" width="32" height="24" fill="var(--colour-teal-dark)" />
  <rect x="138" y="-8" width="32" height="8" fill="var(--colour-stone)" />
  <rect x="138" y="0" width="32" height="24" fill="var(--colour-teal-dark)" />

  <!-- Flagpole -->
  <rect x="174" y="-24" width="4" height="32" fill="var(--colour-stone-dark)" />
  <polygon points="178,-24 178,-16 192,-20" fill="var(--colour-gold)" />

  <!-- Windows (pixel-grid aligned) -->
  <rect x="52" y="66" width="32" height="40" fill="#000" opacity="0.6" />
  <rect x="56" y="70" width="24" height="32" fill="var(--colour-gold)" opacity="0.5" class="window" />

  <rect x="112" y="66" width="32" height="40" fill="#000" opacity="0.6" />
  <rect x="116" y="70" width="24" height="32" fill="var(--colour-gold)" opacity="0.5" class="window" />

  <rect x="82" y="146" width="32" height="40" fill="#000" opacity="0.6" />
  <rect x="86" y="150" width="24" height="32" fill="var(--colour-gold)" opacity="0.5" class="window" />

  <!-- Door (arched pixel style) -->
  <rect x="72" y="202" width="56" height="48" fill="var(--colour-stone-dark)" />
  <rect x="72" y="202" width="8" height="8" fill="var(--colour-teal-bg)" />
  <rect x="120" y="202" width="8" height="8" fill="var(--colour-teal-bg)" />
  <rect x="76" y="198" width="8" height="8" fill="var(--colour-stone-dark)" />
  <rect x="116" y="198" width="8" height="8" fill="var(--colour-stone-dark)" />
  <rect x="84" y="194" width="32" height="8" fill="var(--colour-stone-dark)" />
  <rect x="92" y="214" width="4" height="24" fill="#000" opacity="0.3" />
  <rect x="104" y="214" width="4" height="24" fill="#000" opacity="0.3" />

  <!-- Icon -->
  <text x="100" y="45" text-anchor="middle" fill="var(--colour-gold)" font-size="32" font-family="'Press Start 2P', monospace">üè∞</text>
</svg>

<style>
  svg {
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
  }

  .window {
    animation: windowGlow 3s ease-in-out infinite;
  }

  @keyframes windowGlow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }

  @media (prefers-reduced-motion: reduce) {
    .window {
      animation: none;
      opacity: 0.5;
    }
  }
</style>
