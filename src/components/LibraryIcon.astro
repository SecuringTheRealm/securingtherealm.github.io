---
// Library castle section for blog page
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 200 220"
  class={className}
  role="img"
  aria-label="Library illustration"
  style="width: 100%; max-width: 200px; height: auto;"
>
  <title>The Library</title>
  
  <!-- Library building -->
  <rect x="0" y="50" width="200" height="170" fill="var(--colour-teal-bg)" stroke="var(--colour-stone)" stroke-width="4" />
  
  <!-- Roof -->
  <polygon points="0,50 100,0 200,50" fill="var(--colour-stone)" stroke="var(--colour-stone-dark)" stroke-width="3" />
  
  <!-- Windows -->
  <rect x="30" y="100" width="60" height="50" fill="var(--colour-gold)" opacity="0.5" class="window" />
  <rect x="110" y="100" width="60" height="50" fill="var(--colour-gold)" opacity="0.5" class="window" />
  
  <!-- Door -->
  <rect x="75" y="170" width="50" height="50" fill="var(--colour-stone-dark)" rx="5" />
  
  <!-- Icon -->
  <text x="100" y="90" text-anchor="middle" fill="var(--colour-gold)" font-size="32" font-family="'Press Start 2P', monospace">ðŸ“š</text>
</svg>

<style>
  .window {
    animation: windowGlow 3s ease-in-out infinite;
  }
  
  @keyframes windowGlow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .window {
      animation: none;
      opacity: 0.5;
    }
  }
</style>
