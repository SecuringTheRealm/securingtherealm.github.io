---
import Base from '../../layouts/Base.astro';
---

<Base title="Arcane Scrolls - Newsletter">
  <div class="container" style="padding: var(--space-16) var(--space-4); max-width: 700px;">
    <h1 style="text-align: center; margin-bottom: var(--space-8);">ğŸ“œ Arcane Scrolls</h1>
    <p style="text-align: center; font-size: var(--font-size-lg); margin-bottom: var(--space-12);">
      Subscribe to receive updates on our latest quests, technical insights, and adventures in the realm of technology.
    </p>

    <div style="background: var(--colour-teal-dark); padding: var(--space-8); border: 2px solid var(--colour-gold); border-radius: var(--radius-outer);">
      <h2 style="margin-bottom: var(--space-4);">What You'll Receive</h2>
      <ul style="margin-bottom: var(--space-6); line-height: var(--line-height-relaxed);">
        <li>ğŸ¯ <strong>Weekly Quest Updates</strong>: New blog posts, talks, and projects</li>
        <li>ğŸ” <strong>Security Insights</strong>: Latest threats and defense strategies</li>
        <li>ğŸ¤– <strong>AI Adventures</strong>: Updates on LLM deployments and agentic systems</li>
        <li>â˜ï¸ <strong>Azure Chronicles</strong>: Cloud architecture patterns and best practices</li>
        <li>ğŸ² <strong>Behind the Dice</strong>: How we blend tech with tabletop gaming</li>
      </ul>

      <form 
        id="newsletter-form"
        action={import.meta.env.NEWSLETTER_POST_URL || '#'}
        method="POST"
        style="display: flex; flex-direction: column; gap: var(--space-4);"
      >
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="bot-field" tabindex="-1" />
        </div>

        <div>
          <label for="email" style="display: block; margin-bottom: var(--space-2); font-weight: var(--font-weight-bold);">
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="adventurer@example.com"
            style="width: 100%; padding: var(--space-3); background: var(--colour-teal-bg); border: 2px solid var(--colour-gold); border-radius: var(--radius-md); color: var(--colour-parchment); font-size: var(--font-size-base);"
          />
        </div>

        <div>
          <label for="name" style="display: block; margin-bottom: var(--space-2); font-weight: var(--font-weight-bold);">
            Name (Optional)
          </label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your adventurer name"
            style="width: 100%; padding: var(--space-3); background: var(--colour-teal-bg); border: 2px solid var(--colour-gold); border-radius: var(--radius-md); color: var(--colour-parchment); font-size: var(--font-size-base);"
          />
        </div>

        <button
          type="submit"
          style="padding: var(--space-3) var(--space-6); background: var(--colour-gold); color: var(--colour-ink); border: none; border-radius: var(--radius-md); font-weight: var(--font-weight-bold); font-size: var(--font-size-lg); cursor: pointer; transition: background var(--transition-fast);"
        >
          Join the Quest
        </button>

        <p style="font-size: var(--font-size-sm); color: var(--colour-stone-light); text-align: center; margin-top: var(--space-2);">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </form>

      <div id="form-success" style="display: none; margin-top: var(--space-4); padding: var(--space-4); background: #2d5016; border: 2px solid var(--colour-gold); border-radius: var(--radius-md); text-align: center;">
        <p style="margin: 0; font-weight: var(--font-weight-bold);">âœ¨ Success! Welcome to the quest, adventurer!</p>
      </div>

      <div id="form-error" style="display: none; margin-top: var(--space-4); padding: var(--space-4); background: #5d1a1a; border: 2px solid #d32f2f; border-radius: var(--radius-md); text-align: center;">
        <p style="margin: 0;">âš ï¸ An error occurred. Please try again later.</p>
      </div>
    </div>

    <section style="margin-top: var(--space-12); text-align: center;">
      <h2 style="margin-bottom: var(--space-4);">Prefer Other Channels?</h2>
      <p style="margin-bottom: var(--space-6);">
        Follow us on your favorite platform to stay updated:
      </p>
      <div style="display: flex; gap: var(--space-4); justify-content: center; flex-wrap: wrap;">
        <a href="https://www.youtube.com/@SecuringTheRealm" target="_blank" rel="noopener noreferrer" style="padding: var(--space-2) var(--space-4); background: transparent; color: var(--colour-gold); border: 2px solid var(--colour-gold); border-radius: var(--radius-md); font-weight: var(--font-weight-bold);">
          YouTube
        </a>
        <a href="https://github.com/SecuringTheRealm" target="_blank" rel="noopener noreferrer" style="padding: var(--space-2) var(--space-4); background: transparent; color: var(--colour-gold); border: 2px solid var(--colour-gold); border-radius: var(--radius-md); font-weight: var(--font-weight-bold);">
          GitHub
        </a>
        <a href="https://www.linkedin.com/company/securing-the-realm" target="_blank" rel="noopener noreferrer" style="padding: var(--space-2) var(--space-4); background: transparent; color: var(--colour-gold); border: 2px solid var(--colour-gold); border-radius: var(--radius-md); font-weight: var(--font-weight-bold);">
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</Base>

<script>
  const form = document.getElementById('newsletter-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const honeypot = formData.get('bot-field');
    
    if (honeypot) {
      return;
    }

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
      });

      if (response.ok) {
        form.style.display = 'none';
        if (successMsg) successMsg.style.display = 'block';
      } else {
        if (errorMsg) errorMsg.style.display = 'block';
      }
    } catch (error) {
      if (errorMsg) errorMsg.style.display = 'block';
    }
  });
</script>
