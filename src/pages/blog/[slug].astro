---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import type { CollectionEntry } from 'astro:content';
import Base from '../../layouts/Base.astro';

export const getStaticPaths = (async () => {
  const blogEntries = await getCollection('blog', ({ data }: CollectionEntry<'blog'>) => {
    return data.draft !== true;
  });
  
  return blogEntries.map((entry: CollectionEntry<'blog'>) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}) satisfies GetStaticPaths;

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props as Props;
const { Content } = await entry.render();
---

<Base 
  title={entry.data.title} 
  description={entry.data.description}
  article={true}
  publishDate={entry.data.pubDate}
  tags={entry.data.tags}
>
  <article class="container" style="padding: var(--space-16) var(--space-4); max-width: 800px;">
    <header style="margin-bottom: var(--space-8);">
      <h1 style="margin-bottom: var(--space-4);">{entry.data.title}</h1>
      <p style="font-size: var(--font-size-sm); color: var(--colour-stone-light);">
        {entry.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
      {entry.data.tags.length > 0 && (
        <div style="display: flex; gap: var(--space-2); flex-wrap: wrap; margin-top: var(--space-4);">
          {entry.data.tags.map((tag: string) => (
            <span style="font-size: var(--font-size-sm); padding: var(--space-1) var(--space-3); background: var(--colour-gold); color: var(--colour-ink); border-radius: var(--radius-full);">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    
    <div style="line-height: var(--line-height-relaxed); font-size: var(--font-size-lg);">
      <Content />
    </div>
    
    <footer style="margin-top: var(--space-12); padding-top: var(--space-8); border-top: 2px solid var(--colour-gold);">
      <a href="/blog/" style="display: inline-block; padding: var(--space-3) var(--space-6); background: var(--colour-gold); color: var(--colour-ink); border-radius: var(--radius-outer); font-weight: var(--font-weight-bold);">
        ‚Üê Back to Library
      </a>
    </footer>
  </article>
</Base>
