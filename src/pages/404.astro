---
import { Waveform } from "../components/Waveform";
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <main class="relative flex h-full items-center py-36 lg:px-8">
    <Waveform class="absolute top-0 left-0 h-20 w-full" />
    <div class="relative mx-auto flex w-full max-w-2xl flex-col items-center px-4 sm:px-6 lg:px-0">
      <p class="font-mono text-sm leading-7 text-slate-500">404</p>
      <h1 class="mt-4 text-lg font-bold text-slate-900">Page not found</h1>
      <p class="mt-2 text-base leading-7 text-slate-700">Sorry, we couldn’t find the page you’re looking for.</p>
      <a href="/" class="mt-4 text-sm leading-6 font-bold text-pink-500 hover:text-pink-700 active:text-pink-900">Go back home</a>
    </div>
  </main>
</Layout>
